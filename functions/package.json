{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "prettier:fix": "prettier --config .prettierrc \"**/*.{json,js,jsx,ts,tsx,css,scss,md}\" --write",
    "super:fix": "npm run prettier:fix && npm run lint:fix",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy:functions": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test:mocha": "ts-mocha src/test/**.* --reporter spec --recursive --timeout 5000",
    "test": "firebase emulators:exec \"yarn test:mocha --exit\""
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "chai": "^4.3.6",
    "cross-fetch": "^3.1.5",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase-functions-test": "^0.3.3",
    "mocha": "^9.2.0",
    "prettier": "^2.3.2",
    "sinon": "^13.0.1",
    "ts-mocha": "^9.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
